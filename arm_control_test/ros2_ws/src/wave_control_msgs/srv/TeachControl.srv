# 示教控制服务请求
string command                # "start_record", "stop_record", "pause_record", "resume_record", "play_trajectory", "save_trajectory", "load_trajectory"
string trajectory_id          # 轨迹ID (用于play/save/load)
string description            # 轨迹描述
float32 record_frequency      # 记录频率(Hz)
float32 play_speed           # 回放速度倍数
bool loop_playback           # 是否循环回放
---
# 示教控制服务响应
bool success                 # 操作是否成功
string message               # 状态消息
string current_state         # 当前状态
int32 frame_count           # 当前帧数(如果正在记录或回放)
float32 progress           # 进度百分比(0.0-1.0)